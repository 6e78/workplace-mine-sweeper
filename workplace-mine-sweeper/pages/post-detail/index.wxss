/* pages/post-detail/index.wxss */
.container {
  padding: 30rpx;
  padding-bottom: 140rpx; /* 为底部输入框留出空间 */
}

.post-container {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-color-secondary);
  margin-bottom: 30rpx;
}

.meta text {
  margin-right: 20rpx;
}

.topic {
  background-color: var(--primary-color-light);
  color: var(--primary-color);
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}

.content {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-color);
  margin-bottom: 30rpx;
}

.actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.action-button {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
  color: var(--text-color-secondary);
  font-size: 24rpx;
  transition: all 0.2s ease-in-out;
  margin-left: 20rpx;
}

.action-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.like-button.liked,
.bookmark-button.bookmarked {
  background-color: #fff0f0;
  color: #ff4d4f;
}

.bookmark-button.bookmarked {
    background-color: #fffbe6;
    color: #faad14;
}

/* 评论区 */
.comments-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
}

.comments-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  border-bottom: 1px solid var(--border-color);
  padding-bottom: 20rpx;
}

.comment-item {
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid var(--border-color);
}

.comment-item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.comment-author {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.comment-content {
  font-size: 28rpx;
  color: var(--text-color);
  line-height: 1.7;
  margin-bottom: 20rpx;
}

.comment-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.reply-button {
  margin-right: 20rpx !important;
  background-color: #e9e9e9;
  color: #555;
}

/* 回复 */
.replies-container {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.reply-item {
  margin-bottom: 15rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-author {
  font-size: 26rpx;
  color: #555;
  font-weight: bold;
}

.reply-to-text {
  font-weight: normal;
  color: #777;
  margin: 0 5rpx;
}

.reply-content {
  font-size: 26rpx;
  color: var(--text-color);
  padding-left: 10rpx;
  margin-top: 5rpx;
}

/* 评论输入框 */
.comment-input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-top: 1px solid var(--border-color);
}

.comment-input {
  flex: 1;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  margin-right: 10rpx;
}

.cancel-reply-button {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-right: 20rpx;
  padding: 15rpx 10rpx;
}

.submit-button {
  background-color: var(--primary-color);
  color: #fff;
  border: none;
  border-radius: 30rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
}
