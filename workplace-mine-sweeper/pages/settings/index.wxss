/* pages/settings/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.profile-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-wrapper {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  padding: 0;
  margin: 0;
  border: 4rpx solid #eee;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
}

.form-section {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  font-size: 30rpx;
  color: #333;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: #555;
}

.save-btn {
  width: 100%;
  margin-top: 60rpx;
  background-color: #07c160;
}
