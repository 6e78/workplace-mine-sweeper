<!--pages/bookmarks/index.wxml-->
<view class="container">
  <view class="post-list" wx:if="{{bookmarkedPosts.length > 0}}">
    <view class="post-item" wx:for="{{bookmarkedPosts}}" wx:key="id" bindtap="navigateToPost" data-id="{{item.id}}">
      <view class="post-title">{{item.title}}</view>
      <view class="post-meta">
        <text class="post-author">{{item.author}}</text>
        <text class="post-likes">{{item.likes}} 人赞</text>
      </view>
    </view>
  </view>
  <view class="empty-state" wx:else>
    <text>还没有任何收藏哦</text>
  </view>
</view>