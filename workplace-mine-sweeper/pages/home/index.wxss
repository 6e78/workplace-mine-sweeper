/* pages/home/index.wxss */
.container {
  padding: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.search-button {
  margin-left: 20rpx;
  background-color: var(--primary-color);
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.expose-section {
  margin-bottom: 30rpx;
}

.expose-button {
  display: block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: var(--danger-color);
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.company-list {
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}

.company-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid var(--border-color);
}

.company-item:last-child {
  border-bottom: none;
}

.company-info {
  flex: 1;
}

.company-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.company-tags .tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  margin-right: 10rpx;
  font-size: 22rpx;
  background-color: #f0f0f0;
  color: var(--text-color-secondary);
  border-radius: 4rpx;
}

.company-score {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--danger-color);
}
