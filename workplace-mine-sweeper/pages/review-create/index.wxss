/* pages/review-create/index.wxss */
.container {
  padding: 20rpx;
}

.form-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 15rpx 20rpx;
  border: 1px solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  height: 150rpx;
}

.submit-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
}
